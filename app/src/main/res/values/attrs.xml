<resources>

    
    <declare-styleable name="RedPointView">
        <!-- 红点背景色 -->
        <attr name="red_point_bgColor" format="reference|color" />
        <!-- 红点文本的颜色 -->
        <attr name="red_point_textColor" format="reference|color" />
        <!-- 红点文本字体大小 -->
        <attr name="red_point_textSize" format="reference|dimension" />
        <!-- 红点背景与宿主控件上下边缘间距离 -->
        <attr name="red_point_verticalMargin" format="reference|dimension" />
        <!-- 红点背景与宿主控件左右边缘间距离 -->
        <attr name="red_point_horizontalMargin" format="reference|dimension" />
        <!-- 红点文本边缘与红点背景边缘间的距离 -->
        <attr name="red_point_padding" format="reference|dimension" />
        <!-- 红点在宿主控件中的位置 -->
        <attr name="red_point_gravity" format="enum">
            <enum name="rightTop" value="0" />
            <enum name="rightCenter" value="1" />
            <enum name="rightBottom" value="2" />
        </attr>
        <!-- 是否可以拖拽删除红点 -->
        <attr name="red_point_dragable" format="boolean" />
        <!-- 拖拽红点超出轨迹范围后，再次放回到轨迹范围时，是否恢复轨迹 -->
        <attr name="red_point_isResumeTravel" format="boolean" />
        <!-- 红点描边宽度 -->
        <attr name="red_point_borderWidth" format="reference|dimension" />
        <!-- 红点描边颜色 -->
        <attr name="red_point_borderColor" format="reference|color" />
        <!-- 触发开始拖拽红点事件的扩展触摸距离 -->
        <attr name="red_point_dragExtra" format="reference|dimension" />
    </declare-styleable>
</resources>